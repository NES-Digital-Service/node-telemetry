{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2020",
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "index.ts"]
}
