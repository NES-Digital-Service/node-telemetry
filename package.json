{
  "repository": "NES-Digital-Service/node-telemetry",
  "name": "@nes-digital-service/node-telemetry",
  "description": "Provides standard Kubernetes probes and Prometheus metrics endpoint for Node.js apps.",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "!dist/**/**.test.**"
  ],
  "scripts": {
    "test": "jest --coverage",
    "build": "tsc",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "express": "^4.17.1",
    "prom-client": "^14.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/supertest": "^2.0.12",
    "jest": "^29.5.0",
    "supertest": "^6.1.3",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.2"
  },
  "ts-standard": {
    "project": "tsconfig.json",
    "env": [
      "jest"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "./*.test.ts",
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    }
  }
}
